{
  "name": "@equest/database",
  "version": "0.0.1",
  "private": true,
  "description": "Write the database schema in sql & js, automate database migrations.",
  "main": "schemaTagsPlugin.js",
  "scripts": {
    "gm": "node -r @equest/config node_modules/.bin/graphile-migrate",
    "migrate": "npm run gm migrate",
    "reset": "npm run gm reset -- --erase",
    "watch": "npm run gm watch",
    "commit": "npm run gm commit",
    "uncommit": "npm run gm uncommit"
  },
  "dependencies": {
    "graphile-build-pg": "^4.7.0",
    "graphile-utils": "^4.7.0"
  },
  "devDependencies": {
    "@equest/config": "^0.2.0",
    "graphile-migrate": "^0.1.0"
  }
}