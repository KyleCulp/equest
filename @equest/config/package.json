{
  "name": "@equest/config",
  "version": "1.0.0",
  "private": true,
  "description": "Provides config & preloads dotenv",
  "main": "cjs/main.js",
  "module": "esm/main.js",
  "types": "esm/main.d.ts",
  "type": "module",
  "files": [
    "cjs",
    "esm",
    "src"
  ],
  "scripts": {
    "build": "yarn build:cjs && yarn build:esm",
    "build:cjs": "tsc -p tsconfig.build.json --module commonjs --outDir cjs",
    "build:esm": "tsc -p tsconfig.build.json --module esnext --outDir esm"
  },
  "dependencies": {
    "dotenv": "^8.2.0"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/node": "^13.9.5"
  }
}
